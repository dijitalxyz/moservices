<onExit>
rssPath = getStoragePath("key")+"ex_settings.dat";
rssconf = readStringFromFile(rssPath);
lang=getStringArrayAt(rssconf, 1);
arr = null;
arr = pushBackStringArray(arr, youtubeHD);
arr = pushBackStringArray(arr, lang);
writeStringToFile(rssPath, arr);
</onExit>

<onEnter>
  itemCount = getPageInfo("itemCount");
  ynArr = null;
  ynArr = pushBackStringArray(ynArr, "Нет");
  ynArr = pushBackStringArray(ynArr, "Да");
  youtubeHD = 0;

  rssPath = getStoragePath("key")+"ex_settings.dat";
  rssconf = readStringFromFile(rssPath);
  print("rssconf:",rssconf);
  if(rssconf != null)
  {
    value = getStringArrayAt(rssconf, 0);
    if(value != null &amp;&amp; value != "")
      youtubeHD = value;
  }
</onEnter>


